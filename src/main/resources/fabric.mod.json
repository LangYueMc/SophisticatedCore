{
  "schemaVersion": 1,
  "id": "sophisticatedcore",
  "version": "${version}",

  "name": "Sophisticated Core",
  "description": "Base mod of Sophisticated mods.",

  "environment": "*",
  "license": "GNU General Public License v3.0",
  "authors": [
    "Salandora",
    "P3pp3rF1y"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/sophisticated-core",
    "issues": "https://github.com/P3pp3rF1y/SophisticatedCore/issues",
    "sources": "https://github.com/P3pp3rF1y/SophisticatedCore/"
  },

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.p3pp3rf1y.sophisticatedcore.SophisticatedCore"
    ],
    "client": [
      "net.p3pp3rf1y.sophisticatedcore.client.SophisticatedCoreClient"
    ],
    "fabric-datagen": [
      "net.p3pp3rf1y.sophisticatedcore.data.SophisticatedCoreData"
    ],
    "jei_mod_plugin": [
      "net.p3pp3rf1y.sophisticatedcore.compat.jei.CorePlugin"
    ],
    "cardinal-components": [
      "net.p3pp3rf1y.sophisticatedcore.common.components.Components"
    ]
  },

  "mixins": [ "sophisticatedcore.mixins.json" ],
  "accessWidener": "sophisticatedcore.accesswidener",

  "depends": {
    "minecraft": "${minecraft_version}",
    "fabricloader": ">=${loader_version}",
    "fabric-api": ">=${fabric_version}",

    "porting_lib_accessors": ">=${port_lib_accessors_version}",
    "porting_lib_base": ">=${port_lib_base_version}",
    "porting_lib_entity": ">=${port_lib_entity_version}",
    "porting_lib_extensions": ">=${port_lib_extensions_version}",
    "porting_lib_fake_players": ">=${port_lib_fake_players_version}",
    "porting_lib_networking": ">=${port_lib_networking_version}",
    "porting_lib_obj_loader": ">=${port_lib_obj_loader_version}",
    "porting_lib_transfer": ">=${port_lib_transfer_version}",

    "forgeconfigapiport": ">=${forge_config_version}",
    "team_reborn_energy": ">=${energy_version}"
  },

  "custom": {
    "cardinal-components": [
      "sophisticatedcore:item_handler_component",
      "sophisticatedcore:fluid_handler_component",
      "sophisticatedcore:energy_component"
    ],
    "loom:injected_interfaces": {
      "net/minecraft/class_304":  ["net/p3pp3rf1y/sophisticatedcore/extensions/client/SophisticatedKeyMapping"],
      "net/minecraft/class_465":  ["net/p3pp3rf1y/sophisticatedcore/extensions/client/gui/screens/inventory/SophisticatedAbstractContainerScreen"],
      "net/minecraft/class_1735": ["net/p3pp3rf1y/sophisticatedcore/extensions/inventory/SophisticatedSlot"],
      "net/minecraft/class_1792": ["net/p3pp3rf1y/sophisticatedcore/extensions/item/SophisticatedItem"],
      "net/minecraft/class_1799": ["net/p3pp3rf1y/sophisticatedcore/extensions/item/SophisticatedItemStack"]
    }
  }
}